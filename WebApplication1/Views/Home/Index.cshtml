@using WebApplication1.Models
@model WebApplication1.Models.Player
@{
    Layout = null;
    Func<Player, object> playerTemplate = @<div>@item.Name is played by @item.PlayerName, and this was generated by <strong>my</strong>function.</div>;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Model.Name</title>
</head>
<body>
    @playerTemplate(Model)
</body>
</html>
